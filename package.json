{
  "name": "froggy-rag-mcp",
  "version": "1.0.2",
  "description": "Turnkey RAG system with MCP server and UI",
  "main": "src/main/main.js",
  "bin": {
    "froggy-rag-mcp": "./src/cli/mcp-cli.js"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=8192 electron . --dev",
    "build": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:all": "electron-builder",
    "build:publish": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --publish always",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "release": "npm run version:patch && npm run build:publish",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "mcp-stdio": "node src/cli/mcp-cli.js",
    "mcp": "node src/cli/mcp-cli.js"
  },
  "keywords": [
    "rag",
    "mcp",
    "electron",
    "vector-store"
  ],
  "author": "Froggy RAG MCP",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.1",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^3.5.3",
    "docx": "^8.2.2",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "mammoth": "^1.6.0",
    "marked": "^17.0.0",
    "natural": "^8.1.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.froggy.ragmcp",
    "productName": "Froggy RAG MCP",
    "icon": "images/Froggy RAG.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "deepblue523",
      "repo": "froggy-mcp-rag"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "signingHashAlgorithms": [],
      "sign": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "sign": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "msi": {
      "oneClick": false,
      "menuCategory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "warningsAsErrors": false
    }
  }
}
